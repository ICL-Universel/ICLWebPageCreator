<Window x:Class="ICLWebPageCreator.Fenetre_titre_de_page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ICLWebPageCreator"
        mc:Ignorable="d"
        Title="Fenetre_titre_de_page" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <Label Content="Titre de la page" Margin="5" HorizontalAlignment="Center"/>
        <TextBox x:Name="titre" Width="400" HorizontalAlignment="Center" Margin="5" TextAlignment="Center" Height="25"/>
        <Button x:Name="bouton_ok" Content="Valider" HorizontalAlignment="Center" Width="100" Margin="5" Click="bouton_ok_Click"/>
    </StackPanel>
</Window>
